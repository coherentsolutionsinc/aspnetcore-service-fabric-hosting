<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <NetStandardImplicitPackageVersion>2.0.0</NetStandardImplicitPackageVersion>
    <Platforms>AnyCPU;x64</Platforms>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Copyright>2018 Coherent Solutions, Inc</Copyright>
    <Company>Coherent Solutions, Inc</Company>
    <Authors>Coherent Solutions, Inc</Authors>
    <RootNamespace>CoherentSolutions.AspNetCore.ServiceFabric.Hosting</RootNamespace>
    <Description>This package provides a HostBuilder class that simplifies configuring a service implementation for hosting in both ASP.NET Core and Service Fabric runtimes.</Description>
    <PackageTags>aspnetcore, servicefabric, hosting</PackageTags>
    <RepositoryType>Git</RepositoryType>
    <Version>0.5.1-alpha</Version>
    <PackageReleaseNotes>The initial release.</PackageReleaseNotes>
    <Product>CoherentSolutions.AspNetCore.ServiceFabric.Hosting</Product>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DocumentationFile>bin\Debug\netstandard2.0\CoherentSolutions.AspNetCore.ServiceFabric.Hosting.xml</DocumentationFile>
    <GenerateSerializationAssemblies>Off</GenerateSerializationAssemblies>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore" Version="2.0.3" />
    <PackageReference Include="Microsoft.ServiceFabric" Version="6.2.274" />
    <PackageReference Include="Microsoft.ServiceFabric.AspNetCore.Kestrel" Version="3.1.274" />
    <PackageReference Include="Microsoft.ServiceFabric.Services" Version="3.1.274" />
  </ItemGroup>
</Project>
